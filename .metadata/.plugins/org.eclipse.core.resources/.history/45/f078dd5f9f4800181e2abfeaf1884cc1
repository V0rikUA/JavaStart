package com.gmail.kirovdmitriy;

import java.util.Arrays;

public class Main {

	public static void main(String[] args) {
		int a = 15;
		int b = a * 2;
		int[] massiv2 = new int[b];
		int[] massiv = new int[a];
		for (int i = 0; i < massiv.length; i++) {
			int j = massiv[i];
			if (j == 0) {
				j = (int) (Math.random() * 100);
			}
			massiv[i] = j;
		}

		System.arraycopy(massiv, 0, massiv2, 0, massiv.length);

		for (int i = a; i < massiv2.length; i++) {
			int x = massiv2[i];
			if (x == 0) {
				for (int j = 0; j <= a; j= i-a) {
					int y = massiv[j];
					y = y * 2;
					massiv2[i] = y;
				}

			}

		}
		System.out.println(Arrays.toString(massiv));
		System.out.println(Arrays.toString(massiv2));

	}
}
